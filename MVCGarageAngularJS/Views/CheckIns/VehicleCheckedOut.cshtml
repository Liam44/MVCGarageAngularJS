@model MVCGarage.ViewModels.CheckIns.VehicleCheckedOutVM

@{
    ViewBag.Title = "Check out a vehicle";
}

<div class="header jumbotron">
    <h1>Check Out</h1>
    <hr />
    <p>Your Vehicles has been checked out</p>
</div>

<div style="color: white; margin-top: 10em; text-align: center;">
    <h2 style="text-align: center;">Vehicle</h2>
    <div class="index-table">
        <table>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CheckIn.Vehicle.RegistrationPlate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CheckIn.Vehicle.Owner)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CheckIn.Vehicle.VehicleType)
                </th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.CheckIn.Vehicle.RegistrationPlate)
                </td>
                <td>
                    @Html.DisplayFor(model => model.CheckIn.Vehicle.Owner)
                </td>
                <td>
                    @Html.DisplayFor(model=> model.CheckIn.Vehicle.VehicleType.Type)
                </td>
            </tr>
        </table>
    </div>

    <hr />
    <h2 style="text-align: center;">Parking spot</h2>
    <div class="index-table">
        <table>
            <tr>
                <th>
                    @Html.DisplayName("Check in time")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CheckIn.ParkingSpot.Label)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CheckIn.ParkingSpot.Fee)
                </th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.CheckIn.CheckInTime)
                </td>
                <td>
                    @Html.DisplayFor(model => model.CheckIn.ParkingSpot.Label)
                </td>
                <td>
                    @Model.CheckIn.ParkingSpot.DisplayFee()
                </td>
            </tr>
        </table>
    </div>

    <hr />
    <h2 style="text-align: center;">Total amount</h2>
    <div class="index-table">
        <table>
            <tr>
                <th>
                    @Html.DisplayName("Check in time")
                </th>
                <th>
                    @Html.DisplayName("Check out time")
                </th>
                <th>
                    @Html.DisplayName("Total time")
                </th>
                <th>
                    @Html.DisplayName("Total amount")
                </th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => Model.CheckIn.CheckInTime)
                </td>
                <td>
                    @Html.DisplayFor(model => Model.CheckIn.CheckOutTime)
                </td>
                <td>
                    @Html.DisplayName(TimeSpan.FromMinutes(Model.NbMinutes).ToString())
                </td>
                <td>
                    @Html.DisplayFor(model => Model.NbMinutes) *
                    @Html.DisplayName(string.Format("{0:N2}", Model.CheckIn.ParkingSpot.GetFee())) =
                    @Html.DisplayName(string.Format("{0:C}", Model.CheckIn.TotalAmount))
                </td>
            </tr>
        </table>
    </div>
</div>

<div style="text-align: center; display: block; font-size: 2em; margin-bottom: 3em; color: white;">
    <p>
        @Html.ActionLink("Back to List", "DisplayAllVehicles", "Garage")
    </p>
</div>