@model MVCGarage.Models.CheckIn

@{
    ViewBag.Title = "Book A Parking Spot";
}

<div class="header jumbotron" style="color: white;">
    <h2>The following parking spot has been booked:</h2>
</div>

<div>
    <h4>Vehicle</h4>
    <hr />
    <div class="index-table">
        <table>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Vehicle.RegistrationPlate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Vehicle.Owner)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Vehicle.VehicleType)
                </th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.Vehicle.RegistrationPlate)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Vehicle.Owner)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Vehicle.VehicleType.Type)
                </td>
            </tr>
        </table>
    </div>
</div>

<div>
    <hr />
    <h4>Parking Spot</h4>
    <div class="index-table">
        <table>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ParkingSpot.Label)
                </th>
                <th>
                    @Html.DisplayName("Check in time")
                </th>
                <th>
                    @Html.DisplayName("Monthly fee")
                </th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.ParkingSpot.Label)
                </td>
                <td>
                    @Html.DisplayFor(model => model.CheckInTime)
                </td>
                <td>
                    @Model.ParkingSpot.DisplayMonthlyFee()
                </td>
            </tr>
        </table>
    </div>
</div>

<br />
<br />

<div style="text-align: center; font-size: 2em; display: block; margin-bottom: 3em; color: white;">
    <p>
        @Html.ActionLink("Back to List", "DisplayAllVehicles", "Garage")
    </p>
</div>
