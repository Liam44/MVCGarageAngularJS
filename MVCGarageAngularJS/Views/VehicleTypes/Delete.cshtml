@model int?

@{
    ViewBag.Title = "Delete a vehicle type";
}

<div class="header jumbotron">
    <h2>Delete a vehicle type</h2>
    <hr />
    <p>This is where you can delete a vehicle type</p>
</div>


<div ng-app="vehicleTypes" ng-controller="vehicleTypesController">
    @if (Model == null)
    {
        <h1 style="text-align: center; color: white;">No vehicle type found!</h1>

        <div style="text-align:center; display:block; font-size: 2em; margin-bottom: 3em; color: white;">
            <p>
                @Html.ActionLink("Back to List", "DisplayAllVehicles", "Garage")
            </p>
        </div>
    }
    else
    {
        <div ng-init="getVehicleType(@Model)">
            <div ng-show="vehicleType.Type">
                <h1 style="color: white; text-align: center;">Are you sure you want to delete this vehicle type?</h1>
                <div class="about-body-text">
                    <hr />
                    <div class="index-table">
                        <table>
                            <tr>
                                <th>
                                    Vehicle Type
                                </th>
                                <th>
                                    Fee
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    {{vehicleType.Type}}
                                </td>
                                <td>
                                    {{vehicleType.Fee | number:2}} :-
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            <div ng-hide="vehicleType.Type">
                <h1 style="text-align: center; color: white;">No vehicle type found!</h1>
            </div>

            <form>
                @Html.AntiForgeryToken()

                <div class="form-actions no-color" style="text-align: center; display: block; margin-bottom: 3em; color:white;">
                    <span ng-show="vehicleType.Type"><input type="button" value="Delete" ng-click="deleteVehicleType(@Model)" class="btn btn-default" /> |</span>
                    @Html.ActionLink("Back to List", "DisplayAllVehicles", "Garage", null, new { style = "display: block; text-align: center;" })
                </div>
            </form>
        </div>
    }
</div>
