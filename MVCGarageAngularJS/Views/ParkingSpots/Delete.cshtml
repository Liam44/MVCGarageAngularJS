@model int?

@{
    ViewBag.Title = "Delete a parking spot";
}

<div class="header jumbotron">
    <h2>Delete a parking spot</h2>
    <hr />
    <p>This is where you can delete a parking spot</p>
</div>


<div ng-app="parkingSpots" ng-controller="parkingSpotsController">
    @if (Model == null)
    {
        <h1 style="text-align: center; color: white;">No parking spot found!</h1>

        <div style="text-align:center; display:block; font-size: 2em; margin-bottom: 3em; color: white;">
            <p>
                @Html.ActionLink("Back to List", "Index")
            </p>
        </div>
    }
    else
    {
        <div ng-init="getParkingSpot(@Model)">
            <div ng-show="parkingSpot.Label">
                <h1 style="color: white; text-align: center;">Are you sure you want to delete this parking spot?</h1>
                <div class="about-body-text">
                    <hr />
                    <div class="index-table">
                        <table>
                            <tr>
                                <th>
                                    Identifiant
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    {{parkingSpot.Label}}
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            <div ng-hide="parkingSpot.Label">
                <h1 style="text-align: center; color: white;">No vehicle type found!</h1>
            </div>

            <form>
                @Html.AntiForgeryToken()

                <div class="form-actions no-color" style="text-align: center; display: block; margin-bottom: 3em; color:white;">
                    <span ng-show="parkingSpot.Label">
                        <input type="button" value="Delete" ng-click="delete(@Model)" class="btn btn-default" /> |
                    </span>
                    @Html.ActionLink("Back to List", "Index", new { style = "display: block; text-align: center;" })
                </div>
            </form>
        </div>
    }
</div>
