<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Garage 3.0</title>
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")
</head>
<body class="body-bg">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Garage using MVC", "Index", "Garage", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <form id="frmsearch" action="~/Garage/Search" methond="get">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Vehicles management<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("All vehicles", "DisplayAllVehicles", "Garage")</li>
                                <li>@Html.ActionLink("Parked vehicles", "DisplayParkedVehicles", "Garage")</li>
                                <li>@Html.ActionLink("Check in", "CheckInVehicle", "Vehicles")</li>
                                <li>@Html.ActionLink("Check out", "CheckOutVehicle", "Vehicles")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Parking places management<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Manage parking spots", "Index", "ParkingSpots")</li>
                                <li>@Html.ActionLink("Book a spot", "BookAParkingSpot", "Vehicles")</li>
                                <li>@Html.ActionLink("Unbook a spot", "UnbookParkingSpot", "Vehicles")</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li class="search"><input type="text" name="searchedValue" placeholder="Search.." /></li>
                        <li style="margin:10px 10px;"><input type="submit" class="btn btn-default"/></li>
                    </ul>
                </form>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - Liam, Wilhelm, Mike</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
